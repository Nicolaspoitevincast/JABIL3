<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_name"
        android:inputType="textCapWords"
        android:key="example_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Sampling Rate" />
    <EditTextPreference
        android:defaultValue="Default value"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Number of Values on Screen"
        android:key="edit_text_preference_1" />
    <ListPreference
        android:defaultValue="1"
        android:title="Change Units for Volume"
        android:entries="@array/volume_example_list_titles"
        android:entryValues="@array/volume_example_list_titles"
        android:key="list_preference_1" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="Change Temperature from ° F to ° C "
        android:title="Temperature: ° F" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

</PreferenceScreen>
